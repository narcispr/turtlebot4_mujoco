<mujoco model="turtlebot4">
	<compiler angle="radian" coordinate="local" meshdir="./assets/meshes" autolimits="true"/>
		<!-- initial model from https://gitlab.dit.htwk-leipzig.de/eric.elbing/ai-enhanced-ros/-/tree/main/turtlebot4/turtlebot4ai_package-->
    <size nstack="300000" nuser_geom="1"/>
    <option gravity="0 0 -9.81" timestep="0.01"/>

    <asset>
        <material name="metal" rgba=".9 .95 .95 1"/>
        <material name="black" rgba="0 0 0 1"/>
        <material name="white" rgba="1 1 1 1"/>
        <material name="gray" rgba="0.371705 0.392426 0.474270 1"/>
        <mesh file="body_visual_processed.stl" scale="0.1 0.1 0.1"/>
        <mesh file="bumper_visual.obj" scale="0.001 0.001 0.001"/>
        <mesh file="top_reduced.stl" scale="0.001 0.001 0.001"/>
        <mesh file="weight_block.stl" scale="0.001 0.001 0.001"/>
        <mesh file="wheel.stl" scale="0.001 0.001 0.001"/>
    </asset>

  <worldbody>
      <body name="base" pos="0 0 0.0392" quat="0.70710678 0 0 0.70710678">    <freejoint name="floating_base_joint"/>
        <geom type="mesh" mesh="body_visual_processed" material="gray" mass="0.269"/>
        <site name="imu" pos="0.051 -0.035 0.0293" quat="0.70710678 0 0 -0.70710678"/>
        <!--body name="top" pos="-0.128 0.138 0.055" axisangle="0 0 1 4.71239">
            <geom type="mesh" mesh="top_reduced" material="gray" mass="0.0"/>
        </body-->
        <body name="bumper" pos="0 0 0" axisangle="0 0 1 4.71239">
            <geom type="mesh" mesh="bumper_visual" material="black" mass="0.1"/>
        </body>
        <!-- WEIGHT BLOCKS -->
        <!--body name="front_left_bottom_weight_block" pos="0.0876 -0.06 0.0587">
            <geom type="mesh" mesh="weight_block" material="black" mass="0.061"/>
        </body>
        <body name="front_left_top_weight_block" pos="0.0876 -0.06 0.0677">
            <geom type="mesh" mesh="weight_block" material="black" mass="0.061"/>
        </body->
        <body name="front_right_bottom_weight_block" pos="-0.0876 -0.06 0.0587">
            <geom type="mesh" mesh="weight_block" material="black" mass="0.061"/>
        </body>
        <body name="front_right_top_weight_block" pos="-0.0876 -0.06 0.0677">
            <geom type="mesh" mesh="weight_block" material="black" mass="0.061"/>
        </body-->
        <!-- WHEELS -->
        <body name="wheel_l" pos="0.11755 0.002 -0.0032">
            <geom type="mesh" mesh="wheel"/>
            <joint name="left" damping=".03" actuatorfrcrange="-.4 .4" pos="0 0 0" axis="1 0 0"/>
        </body>
        <body name="wheel_r" pos="-0.117 0.002 -0.0032">
            <geom type="mesh" mesh="wheel"/>
            <joint name="right" damping=".03" actuatorfrcrange="-.4 .4" pos="0 0 0" axis="1 0 0"/>
        </body>
        <body name="wheel_f" pos="0 -0.125 -0.026">
            <geom type="sphere" size="0.013 0.013"/>
            <joint type="ball"/>
        </body>
        
      <!-- Spinning 2D lidar (single rangefinder on a yaw hinge) -->
      <body name="lidar" pos="0.0 -0.00 0.08">
        <joint name="lidar_yaw" type="hinge" axis="0 0 1" damping="0.0032" armature="0.001" frictionloss="0" limited="false"/>
        <geom name="lidar_head_geom" type="cylinder" size="0.035 0.015" rgba="0.1 0.1 0.1 1.0" mass="0.01"/>
        <site name="rf" pos="0.025 0 0" axisangle="0 1 0 1.570796" size="0.003" rgba="0 1 0 0.5"/>
      </body>
    </body>
  </worldbody>

  <tendon>
    <fixed name="forward">
      <joint joint="left" coef=".83"/>
      <joint joint="right" coef=".83"/>
    </fixed>
    <fixed name="turn">
      <joint joint="left" coef="-.1"/>
      <joint joint="right" coef=".1"/>
    </fixed>
  </tendon>

  <actuator>
    <motor name="forward" tendon="forward" ctrlrange="-0.5 0.5"/>
    <motor name="turn" tendon="turn" ctrlrange="-2 2"/>
    <!-- Velocity servo for the lidar yaw joint -->
    <!-- Set control to 15.707963 (rad/s) for a 2.5 Hz spin -->
    <motor name="lidar_spin" joint="lidar_yaw" ctrllimited="true" ctrlrange="0.0 0.05"/>
  </actuator>

  <sensor>
    <!-- IMU -->
    <framequat name="imu_quat" objtype="site" objname="imu"/>
    <gyro name="imu_ang" site="imu"/>
    <accelerometer name="imu_acc" site="imu"/>

    <!-- Wheel joint states -->
    <jointpos name="left_pos"  joint="left"/>
    <jointvel name="left_vel"  joint="left"/>
    <jointpos name="right_pos" joint="right"/>
    <jointvel name="right_vel" joint="right"/>

    <!-- Lidar 2D rangefinders -->
    <!-- Lidar yaw -->
    <jointpos name="lidar_yaw_pos" joint="lidar_yaw"/>
    <jointvel name="lidar_yaw_vel" joint="lidar_yaw"/>
    <!-- Single 2D lidar rangefinder (returns distance along site -Z) -->
    <rangefinder name="scan" site="rf" cutoff="10"/>
    <velocimeter name="base_linvel" site="imu"/>

  </sensor>
</mujoco>

