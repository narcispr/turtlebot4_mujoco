<?xml version="1.0"?>
<robot name="turtlebot4_minimal" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="base_radius" value="0.17"/>
  <xacro:property name="base_height" value="0.06"/>
  <xacro:property name="wheel_radius" value="0.036"/>   <!-- 72 mm diameter -->
  <xacro:property name="wheel_width"  value="0.03"/>
  <xacro:property name="track"        value="0.234"/>   <!-- wheel separation (center-to-center) -->
  <xacro:property name="lidar_x"      value="0.0"/>
  <xacro:property name="lidar_y"      value="0.0"/>
  <xacro:property name="lidar_z"      value="0.05"/>
  <xacro:property name="imu_x"        value="0.051"/>
  <xacro:property name="imu_y"        value="-0.035"/>
  <xacro:property name="imu_z"        value="0.0293"/>

  <!-- ========== LINKS ========== -->
  <!-- Base body -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 ${base_height/2 + 0.015}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${base_radius}" length="${base_height}"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${base_radius}" length="${base_height}"/>
      </geometry>
    </collision>
    <!-- (No inertial on root to avoid KDL warning) -->
  </link>

  <!-- Left wheel -->
  <link name="left_wheel_link">
    <visual>
      <!-- URDF cylinders are along Z; rotate +90Â° about X to align axis with Y -->
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.25"/>
      <!-- rough diagonal inertia for thin cylinder -->
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Right wheel -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.25"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- RPLidar head (simple cylinder) -->
  <link name="rplidar_link">
    <visual>
      <origin xyz="${lidar_x} ${lidar_y} ${lidar_z}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="${lidar_x} ${lidar_y} ${lidar_z}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- IMU frame (massless) -->
  <link name="imu_link">
    <visual>
      <origin xyz="${imu_x} ${imu_y} ${imu_z}" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 1.0 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <!-- ========== JOINTS ========== -->
  <!-- Wheels: continuous around Y -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="left_wheel_link"/>
    <origin xyz="0 ${track/2} ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child  link="right_wheel_link"/>
    <origin xyz="0 ${-track/2} ${wheel_radius}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Lidar is fixed to the base at (0, 0.04, 0.17) -->
  <joint name="rplidar_mount" type="fixed">
    <parent link="base_link"/>
    <child  link="rplidar_link"/>
    <origin xyz="${lidar_x} ${lidar_y} ${lidar_z}" rpy="0 0 0"/>
  </joint>

  <!-- IMU fixed frame at MJCF site position -->
  <joint name="imu_mount" type="fixed">
    <parent link="base_link"/>
    <child  link="imu_link"/>
    <origin xyz="${imu_x} ${imu_y} ${imu_z}" rpy="0 0 0"/>
  </joint>

</robot>
