<mujoco model="turtlebot4 scene">
  <include file="turtlebot4.xml"/>

  <statistic center="0 0 0.8" extent="2"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="1 -1 1.5" dir="-1 1 -1" diffuse="0.5 0.5 0.5" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <camera name="topdown" pos="0 0 12" zaxis="0 0 1" fovy="45"/>
    
    <!-- Exterior Walls -->
    <body name="wall_north" pos="8 0 0.2">
      <geom type="box" size="0.1 8 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall_south" pos="-8 0 0.2">
      <geom type="box" size="0.1 8 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall_east" pos="0 8 0.2">
      <geom type="box" size="8 0.1 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall_west" pos="0 -8 0.2">
      <geom type="box" size="8 0.1 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>

    <!-- Inner walls -->
    <body name="wall1" pos="2 5 0.2">
      <geom type="box" size="0.1 3 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall2" pos="-4 -4 0.2">
      <geom type="box" size="0.1 2 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall3" pos="-2 2 0.2">
      <geom type="box" size="4 0.1 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall4" pos="4 -2 0.2">
      <geom type="box" size="4 0.1 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>
    <body name="wall5" pos="4 -4 0.2">
      <geom type="box" size="0.1 2 0.4" mass="0.2" rgba="0.6 0.6 0.8 1"/>
    </body>

    <!-- free boxes -->
    <body name="box1" pos="2 3.2 0.1">
      <freejoint name="free_box1"/>
      <geom type="box" size="0.2 0.2 0.2" mass="0.2"/>
    </body>
    <body name="box2" pos="-1.5 -4.2 0.1">
      <freejoint name="free_box2"/>
      <geom type="box" size="0.2 0.2 0.2" mass="0.2"/>
    </body>
    <body name="box3" pos="-3.5 0 0.1">
      <freejoint name="free_box3"/>
      <geom type="box" size="0.2 0.2 0.2" mass="0.2"/>
    </body>

  </worldbody>
</mujoco>